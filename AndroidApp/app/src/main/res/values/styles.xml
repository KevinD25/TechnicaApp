<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Textview theme. -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/filler_small</item>

        <item name="android:lineSpacingExtra">@dimen/lineSpace</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="Info" parent="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">@dimen/filler</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="Info.Lines">
        <item name="android:lines">8</item>
    </style>

    <style name="Header" parent="Text">
        <item name="android:textSize">@dimen/header</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Card.Info">
        <item name="android:maxWidth">@dimen/large_width</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:lines">6</item>
    </style>

    <style name="Card.Header">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <!-- Image theme. -->
    <style name="Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/filler</item>
    </style>

    <style name="Schild" parent="Image">
        <item name="srcCompat">@drawable/technica_schild</item>
    </style>

    <style name="BigImage" parent="Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/filler_big</item>
        <item name="android:minHeight">@dimen/big_image</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="srcCompat">@mipmap/ic_launcher</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">@dimen/icon</item>
        <item name="android:layout_height">@dimen/icon</item>
    </style>

    <style name="CardImage">
        <item name="android:layout_width">@dimen/small_icon</item>
        <item name="android:layout_height">@dimen/small_icon</item>
        <item name="android:layout_margin">@dimen/filler_small</item>
        <item name="android:titleMarginStart">@dimen/none</item>
    </style>

    <!-- Button theme. -->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">@dimen/filler</item>
        <item name="android:background">@drawable/style_button_shape</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <!-- Layout theme. -->
    <style name="ConLay">
        <item name="android:background">@color/white</item>
        <item name="android:paddingVertical">@dimen/filler_small</item>
    </style>

    <style name="CardLay">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/filler_small</item>
    </style>

    <!-- ViewPager theme. -->
    <style name="ViewPager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_above">@id/indicator</item>
    </style>

    <!-- Indicator theme. -->
    <style name="Indicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

</resources>
