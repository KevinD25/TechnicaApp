<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ConLay" >

        <ImageView
            android:id="@+id/img_schild"
            style="@style/Image.Schild"
            app:layout_constraintBottom_toTopOf="@id/txt_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/txt_home"
            style="@style/Text.Header"
            android:text="@string/home"
            app:layout_constraintBottom_toTopOf="@+id/img_schild"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_schild" />

        <TextView
            android:id="@+id/txt_richtingen"
            style="@style/Text"
            android:text="@string/richtingen"
            app:layout_constraintBottom_toTopOf="@+id/carousel_event"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_home" />

        <com.yarolegovich.discretescrollview.DiscreteScrollView
            android:id="@+id/carousel_event"
            style="@style/Card.Big"
            app:layout_constraintBottom_toTopOf="@+id/txt_makers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_richtingen" />

        <TextView
            android:id="@+id/txt_makers"
            style="@style/Text.Note"
            android:text="@string/hulp_developers"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carousel_event" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>